{
  "name": "express-api-template",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "// prestart: build the content of the src folder (to ES5) ": "ttd: why if using latest node ... may not be option, may want early stage features",
    "prestart": "babel ./src --out-dir build",
    "// start: start the server from the build folder": "",
    "start": "node ./build/bin/www",
    "// startdev: start the server in development mode. note: babel-node; the --exec flag forces babel-node to serve the src/ folder ": "",
    "startdev": "nodemon --exec babel-node ./src/bin/www",
    "lint": "./node_modules/.bin/eslint ./src",
    "// pretty: prettifies code; the postpretty command is run immediately after ": "",
    "pretty": "prettier --write '**/*.{js,json}' '!node_modules/**'",
    "// postpretty: auto-fix common linting issues. can just run 'yarn pretty' without running the lint command ": "",
    "postpretty": "yarn lint --fix",
    "// test: executes our test with nyc and generates three kinds of coverage report:  ": "",
    "// test: * an HTML report, outputted to the coverage/ dir ": "dir is auto-generated",
    "// test: * a text report outputted to the terminal ": "",
    "// test: * an lcov report outputted to the .nyc_output/ dir ": "dir is auto-generated",
    "test": "nyc --reporter=html --reporter=text --reporter=lcov mocha -r @babel/register",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "runQuery": "babel-node ./src/utils/runQuery",
    "// commit: 'yarn pretty' first ... "
    "commit": "git add --all; git commit -m ",
    "push": "git push"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "pg": "^7.18.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/node": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/register": "^7.8.6",
    "@babel/runtime": "^7.8.7",
    "chai": "^4.2.0",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "mocha": "^7.1.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
    "supertest": "^4.0.2"
  }
}
